.page-header
  = link_to new_cliente_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    =I18n.t(:new_cliente)
  %h1
    =I18n.t(:listing_clientes)
.table-responsive
  %table.table.table-striped.table-bordered.table-hover#dttb
    %thead
      %tr
        %th
          =I18n.t(:nome_cliente)
        %th
          =I18n.t(:cpf)
        %th
          =I18n.t(:email)
        %th

    %tbody
      - @clientes.each do |cliente|
        %tr
          %td= cliente.nome
          %td= cliente.cpf
          %td= cliente.email
          %td
            = link_to edit_cliente_path(cliente) do
              %i.fa.fa-pencil
              &nbsp;
            = link_to cliente, data: { confirm: I18n.t(:are_you_sure_destroy_cliente) }, method: :delete do
              %i.fa.fa-trash
              &nbsp;
              &nbsp;
            - if cliente.assinaturas.any?  
              = link_to cliente_assinaturas_path(cliente.id) do
                %i.fa.fa-map-marker
                =I18n.t(:assinaturas)
 

